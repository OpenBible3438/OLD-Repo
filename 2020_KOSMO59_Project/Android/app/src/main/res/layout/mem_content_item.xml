<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:paddingTop="20dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:elevation="0dp"
        android:id="@+id/cv_content1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp">

                <ImageView
                    android:tint="#00BCD4"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/icon_gymname"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                </ImageView>

                <TextView
                    android:fontFamily="@font/font"
                    android:id="@+id/tv_mem_conts_title"
                    android:text="터짐 가산점"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <!-- 사진부분 -->
            <ImageView
                android:id="@+id/iv_mem_conts_img"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:scaleType="centerCrop"
                android:src="@drawable/content_sample1" />

            <!-- 글자 들어가는 부분 -->

            <TextView
                android:id="@+id/tv_mem_conts_text"
                android:textSize="20sp"
                android:text="모니터 해상도 너무 좋습니다 ~\n고화질 유튜브 보면서 운동 가능 "
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody2"/>

            <!-- 좋아요, 날짜 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/ib_emptyHeart1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:src="@drawable/cont_heart_empty"/>
                <TextView
                    android:id="@+id/tv_mem_conts_like_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_mem_conts_date"
                    android:text="2020-07-02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <!--구분 라인-->
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="20dp"
        android:background="#000000" />
</LinearLayout>