<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED">

    <!-- 스크롤 뷰 안으로 코드추가 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30sp">

        <!--======================================카드뷰 시작-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:layout_marginBottom="10sp"
            android:elevation="10dp"
            app:cardBackgroundColor="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="20sp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_gravity="center"
                    android:src="@drawable/people_sample3" />

                <LinearLayout
                    android:layout_marginLeft="20sp"
                    android:layout_width="45sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="45sp"
                        android:layout_height="25sp"
                        android:gravity="center_vertical"
                        android:text="회원명"
                        android:textAlignment="textStart"
                        tools:ignore="RtlCompat"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="45sp"
                        android:layout_height="25sp"
                        android:gravity="center_vertical"
                        android:text="회원번호"
                        android:textAlignment="textStart"
                        tools:ignore="RtlCompat"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="45sp"
                        android:layout_height="25sp"
                        android:gravity="center_vertical"
                        android:text="수업"
                        android:textAlignment="textStart"
                        tools:ignore="RtlCompat"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="0sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25sp"
                        android:gravity="center_vertical"
                        android:text=" 김짐꾼"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25sp"
                        android:gravity="center_vertical"
                        android:text=" 101"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25sp"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:text=" 수영"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <!--======================================카드뷰 시작-->
        <androidx.cardview.widget.CardView
            android:id="@+id/tch_mem_1"
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:layout_marginBottom="10sp"
            android:elevation="10dp"
            app:cardBackgroundColor="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="20sp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_gravity="center"
                    android:src="@drawable/people_sample2" />

                <LinearLayout
                    android:layout_marginLeft="20sp"
                    android:layout_width="45sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="45sp"
                        android:layout_height="25sp"
                        android:gravity="center_vertical"
                        android:text="회원명"
                        android:textAlignment="textStart"
                        tools:ignore="RtlCompat"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="45sp"
                        android:layout_height="25sp"
                        android:gravity="center_vertical"
                        android:text="회원번호"
                        android:textAlignment="textStart"
                        tools:ignore="RtlCompat"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="45sp"
                        android:layout_height="25sp"
                        android:gravity="center_vertical"
                        android:text="수업"
                        android:textAlignment="textStart"
                        tools:ignore="RtlCompat"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="0sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25sp"
                        android:gravity="center_vertical"
                        android:text=" 김회원"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25sp"
                        android:gravity="center_vertical"
                        android:text=" 102"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25sp"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:text=" 요가"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <!--======================================카드뷰 시작-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_tch_mem_inbody"
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:layout_marginBottom="10sp"
            android:elevation="10dp"
            app:cardBackgroundColor="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="20sp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_gravity="center"
                    android:src="@drawable/people_sample1_256px" />

                <LinearLayout
                    android:layout_width="45sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="45sp"
                        android:layout_height="25sp"
                        android:gravity="center_vertical"
                        android:text="회원명"
                        android:textAlignment="textStart"
                        android:textSize="12sp"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:layout_width="45sp"
                        android:layout_height="25sp"
                        android:gravity="center_vertical"
                        android:text="회원번호"
                        android:textAlignment="textStart"
                        android:textSize="12sp"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:layout_width="45sp"
                        android:layout_height="25sp"
                        android:gravity="center_vertical"
                        android:text="수업"
                        android:textAlignment="textStart"
                        android:textSize="12sp"
                        tools:ignore="RtlCompat" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="0sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25sp"
                        android:gravity="center_vertical"
                        android:text=" 나회원"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25sp"
                        android:gravity="center_vertical"
                        android:text=" 103"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25sp"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:text=" 수영"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>