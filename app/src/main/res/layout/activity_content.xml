<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/layout_sample"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".common.ContentActivity">

    <!-- ☆★☆★☆★☆★☆★☆★☆★유일하게 건드려야되는 곳☆★☆★☆★☆★☆★☆★☆★ -->
    <!-- tools:context=".폴더이름.엑티비티이름" -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            layout="@layout/common_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"/>

        <ScrollView
            android:background="#EAEAEA"
            android:layout_marginTop="?attr/actionBarSize"
            android:layout_marginBottom="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- ☆★☆★☆★☆★☆★☆★☆★ 여기 위로 건들면 죽음 ☆★☆★☆★☆★☆★☆★☆★-->
            <!-- ☆★☆★☆★☆★☆★☆★☆★ 여기에 코드 추가 ☆★☆★☆★☆★☆★☆★☆★-->

            <!-- 컨텐츠 카드뷰 -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_content1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- 프사, 이름(매장 or 강사) -->
                        <LinearLayout
                            android:layout_marginBottom="3dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:src="@drawable/pr_sample4"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>

                            <TextView
                                android:id="@+id/tv_contTitle"
                                android:text="터짐 가산점"
                                android:textSize="18sp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>

                        </LinearLayout>

                        <!-- 사진부분 -->
                        <ImageView
                            android:id="@+id/iv_content1"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/content_sample1" />

                        <!-- 글자 들어가는 부분 -->

                        <TextView
                            android:text="모니터 해상도 너무 좋습니다 ~\n고화질 유튜브 보면서 운동 가능 "
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBody2"/>

                        <!-- 좋아요, 날짜 -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageButton
                                android:id="@+id/ib_emptyHeart1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#00FFFFFF"
                                android:src="@drawable/cont_heart_empty"
                                android:onClick="cont_clickHeart"/>
                            <TextView
                                android:id="@+id/tv_contLike1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <TextView
                                android:text="2020-07-02"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <!--====================================================-->
                <!-- 샘플 2 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- 프사, 이름(매장 or 강사) -->
                        <LinearLayout
                            android:layout_marginBottom="3dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:src="@drawable/pr_sample4"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>

                            <TextView
                                android:text="여기내짐 독산점"
                                android:textSize="18sp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>

                        </LinearLayout>

                        <!-- 사진부분 -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/pr_sample2" />

                        <!-- 글자 들어가는 부분 -->

                        <TextView
                            android:text="코로나 방역 소독 완료했습니다.\n안 전 제 일"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBody2"/>

                        <!-- 좋아요, 날짜 -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageButton
                                android:id="@+id/ib_emptyHeart2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="#00FFFFFF"
                                android:onClick="cont_clickHeart"
                                android:src="@drawable/cont_heart_empty" />
                            <TextView
                                android:id="@+id/tv_contLike2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <TextView
                                android:text="2020-07-02"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <!--====================================================-->
                <!-- 샘플 3 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- 프사, 이름(매장 or 강사) -->
                        <LinearLayout
                            android:layout_marginBottom="3dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:src="@drawable/people_sample2"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>

                            <TextView
                                android:text="김콜라 강사"
                                android:textSize="18sp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>

                        </LinearLayout>

                        <!-- 사진부분 -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/tch_profile_sample" />

                        <!-- 글자 들어가는 부분 -->

                        <TextView
                            android:text="터짐 독산점에서 개인PT 수업 개설합니다.\n문의 많이 주세요."
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBody2"/>

                        <!-- 좋아요, 날짜 -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageButton
                                android:id="@+id/ib_emptyHeart3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#00FFFFFF"
                                android:src="@drawable/cont_heart_empty"
                                android:onClick="cont_clickHeart"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <View
                                android:id="@+id/tv_contLike3"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <TextView
                                android:text="2020-07-02"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <!--====================================================-->


            </LinearLayout>
            <!-- ☆★☆★☆★☆★☆★☆★☆★ 여기에 코드 추가 ☆★☆★☆★☆★☆★☆★☆★-->
            <!-- ☆★☆★☆★☆★☆★☆★☆★ 여기 아래로 건들면 죽음 ☆★☆★☆★☆★☆★☆★☆★-->
        </ScrollView>

        <include
            layout="@layout/common_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom" />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/sample_navigationView"
        app:headerLayout="@layout/common_hamburger"
        app:menu="@menu/hamburger_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start">
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>