<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!--==== 카드뷰 시작 ====-->
    <androidx.cardview.widget.CardView
        android:id="@+id/tch_mem_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:fontFamily="@font/font"
                        android:id="@+id/tch_memList_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:text="김회원"
                        android:textColor="@color/colorPrimary"
                        android:textSize="27sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginRight="5dp"
                            android:src="@drawable/icon_membirth"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tch_memList_birth"
                            android:layout_width="match_parent"
                            android:layout_height="25sp"
                            android:gravity="center_vertical"
                            android:text="1990-01-01 "
                            android:textSize="18sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginRight="5dp"
                            android:src="@drawable/icon_memtel"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/mem_memList_tel"
                            android:layout_width="match_parent"
                            android:layout_height="25sp"
                            android:gravity="center_vertical"
                            android:text="010-1234-5678"
                            android:textSize="18sp" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:gravity="right|center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    //회원 정보 카드뷰
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_memListDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="left|center"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:background="#2196F3"
                            android:orientation="horizontal"
                            android:padding="10dp">
                            <TextView
                                android:textStyle="bold"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="회원\n정보"
                                android:textColor="#ffffff"
                                android:textSize="16sp" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_memdetail_w" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    //메모 관리 카드뷰
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_memListMeno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:gravity="left|center"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:orientation="horizontal"
                            android:padding="10dp">
                            <TextView
                                android:textStyle="bold"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="메모\n관리"
                                android:textColor="#ffffff"
                                android:textSize="16sp" />
                            <ImageView
                                android:src="@drawable/icon_memmemo_w"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <!--구분 라인-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="center"
        android:background="#000000" />


</LinearLayout>