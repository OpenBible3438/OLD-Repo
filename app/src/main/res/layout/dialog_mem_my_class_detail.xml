<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tch_mem_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!-- 스크롤 뷰 안으로 코드추가 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="match_parent">

                <TextView
                    android:text="테스트"
                    android:fontFamily="@font/font"
                    android:id="@+id/cls_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/icon_close"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:backgroundTint="#00FFFFFF"
                    app:srcCompat="@drawable/icon_close_s" />
            </LinearLayout>

        </LinearLayout>

        <!--구분 라인-->
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginBottom="20dp"
            android:background="#000000" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/font"
                    android:textSize="18sp"
                    android:gravity="center|top"
                    android:text="남은 횟수"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/cls_rcnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:textColor="#656565"
                    android:textSize="30sp" />
                <ProgressBar
                    android:id="@+id/pgb_cnt"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:progressTint="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="bottom"
                    android:inputType="number" />

            </LinearLayout>

            <!--구분 라인-->
            <View
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#000000" />

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/font"
                    android:textSize="18sp"
                    android:gravity="center|top"
                    android:text="남은 일수"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/cls_rdays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="top"
                    android:textColor="#656565"
                    android:textSize="30sp" />

            </LinearLayout>


            <ProgressBar
                android:id="@+id/pgb_days"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progressTint="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="bottom"
                android:inputType="number" />

        </LinearLayout>

        <!--구분 라인-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textColor="#00BCD4"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center"
                    android:text="강사명"
                    android:textSize="12sp"/>
                <TextView
                    android:textColor="#00BCD4"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center"
                    android:text="시작일"
                    android:textSize="12sp"/>
                <TextView
                    android:textColor="#00BCD4"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center"
                    android:text="종료일"
                    android:textSize="12sp"/>
                <TextView
                    android:textColor="#00BCD4"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center"
                    android:text="수업요일"
                    android:textSize="12sp"/>
                <TextView
                    android:textColor="#00BCD4"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center"
                    android:text="시작시간"
                    android:textSize="12sp"/>
                <TextView
                    android:textColor="#00BCD4"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center"
                    android:text="종료시간"
                    android:textSize="12sp"/>
                <TextView
                    android:textColor="#00BCD4"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center"
                    android:text="수업소개"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tch_name"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/cls_s_date"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/cls_e_date"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/cls_day"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/cls_s_time"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/cls_e_time"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:textSize="20sp" />
                <TextView
                    android:text="테스트\n테스트"
                    android:layout_marginTop="5dp"
                    android:id="@+id/cls_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="20sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
